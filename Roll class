import java.util.Random;	//Required to generate random numbers

public class Roll
{
	private int guessConvert;	//User guess at roll
	
	//Declared an in variable to user guess
	public Roll(int roll)
	{
		guessConvert = roll;
	}
	
	//Sets the user guess as the variable roll
	public void setRoll(int roll)
	{
		guessConvert = roll;
	}
	
	//Dice one roll
	public int getDice1()
	{
		int dice1;	//Holds the result of the dice one roll
		Random rollOne = new Random();	//Generates a random number
		
		dice1 = rollOne.nextInt(5)+1;	//Will generate a number from 1-6 inclusive
		
		return dice1;	//Returns dice 1 results
	}
	
	//Dice two roll
	public int getDice2()
	{
		int dice2;	//Holds the result of the dice two roll
		Random rollTwo = new Random();	//Generates a random number
		
		dice2 = rollTwo.nextInt(5)+1;	//Will generate a number from 1-6 inclusive
		
	
